@model Relync2.Models.Activity

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Activity</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">                
                <select asp-for="Type" class="form-control">
                    <option value="ACCEPT">Accept</option>                                      
                    <option value="TAKE">Take</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="PropertyID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PropertyID" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfProperties,"Id","Title"))"></select>
                <span asp-validation-for="PropertyID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RequestID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RequestID" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfRequests,"id","Location"))"></select>
                <span asp-validation-for="RequestID" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

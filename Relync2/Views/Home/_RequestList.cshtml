@model IEnumerable<Relync2.Models.Request>
@{ 
    int count = 0;
    int colbtn = 0;
    int colpan = 0;
}

@foreach (var item in Model)
{
    <div class="panel">
        <div >
            
               
           
            <div class="media">
                <div class="media-left">

                    <img class="media-object" style="width: 64px; height: 64px;" alt="64x64" src="data:image/svg+xml;base64," data-src="holder.js/64x64" data-holder-rendered="true">

                    @Html.DisplayNameFor(model => model.Active): @Html.DisplayFor(modelItem => item.Active)
                </div>
                <div class="media-body">
                    <h4 class="media-heading">@Html.DisplayFor(modelItem => item.UserID) <span class="label label-info">@Html.DisplayFor(modelItem => item.Ttype)</span> <small>@Html.DisplayFor(modelItem => item.Dated)</small></h4>

                    @Html.DisplayNameFor(model => model.Ptype): @Html.DisplayFor(modelItem => item.Ptype) | @Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(modelItem => item.Location)
                    <br>
                    @Html.DisplayNameFor(model => model.Highest): @Html.DisplayFor(modelItem => item.Currency) @Html.DisplayFor(modelItem => item.Highest) |
                    @Html.DisplayNameFor(model => model.Lowest): @Html.DisplayFor(modelItem => item.Currency) @Html.DisplayFor(modelItem => item.Lowest)

                    <br>
                    @Html.DisplayNameFor(model => model.Attributes): @Html.DisplayFor(modelItem => item.Attributes)
                </div>
                <div class="media-right">
                    <a class="btn btn-danger" data-toggle="collapse" href="#collapse1@(++colbtn)">Offer</a>
                </div>
            </div>
        </div>
        <div id="collapse1@(++colpan)" class="panel-collapse collapse">
            <div class="panel-body">
                <hr />
                <h4>Select property to Offer</h4>
                @{ 
                    ViewBag.red = item.id;
                }
            
                @await Html.PartialAsync("_Offer", (IEnumerable<Property>)ViewData["provlist"])

                                                
            </div>
            
        </div>
    </div>
                      

}